/* pages/Data/data.wxss */

.top {
  width: 100%;
  height: 130rpx;
  line-height: 150rpx;
  text-align: center;
  color: white;
  background-color: #00a4ff;
}

.main {
  width: 100%;
  height: 2000rpx;
  background-color: #f7f7f7;
  padding-top: 30rpx;
}

.sections {
  margin-top: 30rpx;
}

.title {
  width: 20%;
  margin-left: 5%;
  text-align: center;
  background-color: #999;
  border-radius: 30rpx;
  color: #f7f7f7;
  font-size:30rpx;
  padding: 5rpx;
}

.contain {
  padding: 30rpx;
  width: 100%;
  height: auto;
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item {
  width: 30%;
  height: 300rpx;
  margin-left: 2%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.name {
  width: 220rpx;
  height: 180rpx;
  text-align: center;
  margin-top: 16rpx;
  font-size: 30rpx;
}

.icon {
  width: 120rpx;
  margin-left: 25%;
  height: 120rpx;
  background-color: #00a4ff;
  text-align: center;
  color: white;
  font-weight: 800;
  font-size: 70rpx;
  line-height: 120rpx;
}
