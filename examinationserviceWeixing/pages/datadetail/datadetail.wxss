/* pages/datadetail/datadetail.wxss */

.top {
  width: 100%;
  height: 130rpx;
  line-height: 150rpx;
  text-align: center;
  color: white;
  background-color: #00a4ff;
}

.top image {
  position: absolute;
  left: 0rpx;
  width: 10%;
  margin-top: 45rpx;
  height: 60rpx;
}

.main {
  width: 100%;
  height: 1500rpx;
  background-color: #f7f7f7;
}

.title {
  width: 100%;
  height: 300rpx;
  /* background: repeating-radial-gradient(#c8dcf0, #aacbec 10%, #93b7dc 15%); *//* background: radial-gradient(#c8dcf0, #94c0ec, #fff); *//* background: repeating-linear-gradient(#c8dcf0,  #94c0ec 10%, #fff 20%); */
  background: linear-gradient(#c8dcf0, #fff);
  display: flex;
  flex-direction: row;
}

.image {
  width: 40%;
  height: 100%;
  padding-top: 50rpx;
}

.image image {
  width: 80%;
  height: 200rpx;
}

.data {
  width: 60%;
  display: flex;
  flex-direction: column;
  padding-top: 10%;
}

.name {
  width: auto;
  height: 80rpx;
  font-size: 60rpx;
  overflow: hidden;
  display: block;
}

.type, .date {
  color: #9da0a4;
}

.share {
  margin-top: 20rpx;
  width: 80%;
  height: 80rpx;
  font-size: 50rpx;
  margin-left: 10%;
  background-color: #1aad19;
  color: white;
  line-height: 80rpx;
  text-align: center;
}

.intro {
  margin-top: 10rpx;
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  margin-left: 10%;
  color: #909eb0;
  line-height: 100rpx;
  text-align: center;
}

.list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.item {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-top: 12rpx;
}

.left {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  text-align: justify;
}

.paperid {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  /* background-color: #999; */
  color: #999;
  font-size: 70rpx;
  text-align: center;
  border-radius: 40rpx;
  font-style: italic;
}

.papername {
  width: 70%;
  margin-left: 20rpx;
  background-color: white;
  font-size: 30rpx;
}

.right {
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  color: #525564;
  font-size: 30rpx;
  font-style: italic;
}
