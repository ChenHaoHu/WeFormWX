/* pages/sign/sign.wxss */
/* pages/main/main.wxss */


.main{
  padding-top: 2%;
  padding-bottom: 2%;
    background-color: #a6acaf;
    height: 100%;
    width: 100%;
}


.person {
  width: 96%;
  height: 96%;
  margin-left: 2%;
  padding-bottom: 2%;
  background-color: #bdd9e9;
  border-radius: 15rpx;
}



.title {
  width: 40%;
  margin-left: 30%;
  text-align: center;
  font-style: italic;
  color: white;
  font-size: 40rpx;
  font-weight: 800;
  padding: 10rpx;
  border-bottom: #303e46 solid 5rpx;
}

.btns {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-bottom: 20rpx;
  padding-top: 8rpx;
}

.btns view {
  width: 30%;
  height: 60rpx;
  text-align: center;
  border-radius: 12rpx;
}

.active {
  background-color: gray;
  border-bottom: #00a4ff solid 5rpx;
}

/* table 组件封装*/

.table {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-left: 5%;
}

.table .th {
  display: flex;
  flex-direction: row;
}

.input {
  background-color: #edf2f5;
  border-radius: 20rpx;
  margin-top: 10rpx;
  border-bottom: #677075 solid 1rpx;
  border-left: #989ea2 solid 0.5rpx;
}

.table .th .tr {
  padding-left: 20rpx;
  /* width: 220rpx; */
  padding-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

input {
  width: 320rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  font-style: italic;
}

.intro{
  width: 90%;
padding-left: 15rpx;
  font-size: 35rpx;
  font-style: italic;
  background-color: #0ca6fb;
   border-radius: 20rpx;
    margin-top: 20rpx;
    color:#edf2f5;
}

picker{
   font-size: 30rpx;
  font-style: italic;
}

.result {
  display: flex;
  flex-direction: column;
  width: 180%;
  text-align: center;
}

.result view {
  width: 400rpx;
  margin-top: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  background-color: #00a4ff;
  border-radius: 40rpx;
  border-bottom: #677075 solid 1rpx;
}

/*photo  */

.imgdata {
  position: relative;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  width: 40%;
  color: #fff;
  font-style: italic;
}

.photo {
  width: 60%;
  height: 500rpx;
}

.photo image {
  width: 100%;
  height: 100%;
 
}

.send {
margin-top: 20rpx;
  width: 70%;
  margin-left: 15%;
  height: 90rpx;
  background-color: #00a4ff;
  border-radius: 30rpx;
  color: white;
  font-size: 60rpx;
  line-height: 90rpx;
   border-bottom: #677075 solid 1rpx;
}


.red{
  color: red;
}