/* pages/team/team.wxss */

.main {
  width: 100%;
  height: 1000rpx;
}

.contain {
  position: relative;
  width: 80%;
  height: 98%;
  margin-top: 10%;
  margin-left: 10%;
  border-radius: 20rpx;
  box-shadow: 0 0 0 1px rgba(161, 152, 221, 0.4);
  color: #7461ee;
}

.con {
  width: 100%;
  height: 90%;
  background-color: white;
}

.next {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #7461ee;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  color: white;
  text-align: center;
  position: absolute;
  bottom: 0rpx;
}

.title {
  width: 100%;
  text-align: center;
  padding-top: 40rpx;
  font-size: 60rpx;
}

.data {
  text-align: justify;
  font-size: 30rpx;
  padding: 30rpx;
}

.job {
  width: 100%;
  text-align: center;
  padding-top: 40rpx;
  font-size: 30rpx;
}
