.main {
  width: 100%;
  height: auto;
}

.data {
  display: flex;
  flex-direction: column;
}

.con {
  display: flex;
  flex-direction: column;
}

.con .label {
  text-align: center;
  font-size: 40rpx;
  padding-top: 30rpx;
}

.con .content {
  text-align: center;
  font-size: 35rpx;
  padding: 20rpx;
}

.userimg {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.userimg image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 80rpx;
}

.username {
  text-align: center;
  padding: 30rpx;
  font-size: 30rpx;
}

.operation {
  float: right;
  width: 40%;
  height: 70rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.zan {
  padding: 30rpx;
  width: 30%;
  display: flex;
  flex-direction: row;
}

.opinion {
  padding: 30rpx;
  width: 30%;
  display: flex;
  flex-direction: row;
}

.zan  image, .opinion image {
  padding-right: 13rpx;
  height: 70rpx;
}

.explain{
   margin-top: 150rpx;
  font-size: 30rpx;
  padding: 30rpx;
}

.opinions {

  width: 100%;
  height: auto;
  min-height: 400rpx;
  background-color: #fff;
  border-top: 1rpx solid #dbdbdf;
}

.opinions .item {
  width: 100%;
  height: auto;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}

.item .head {
   width: 100%; 
  float: left;
  font-size: 30rpx;
}

.item .body {
  float: left;
  height: auto;
  font-size: 32rpx;
  text-align: justify;
  padding-right: 30rpx;


}


.icon {
  width: 100rpx;
  padding-top: 20rpx;
}

.icon image {
  width: 100rpx;
  height: 100rpx;
}

.item .content {
  width: 100%;
  padding: 20rpx;
}

.bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  justify-content: space-around;
  border-bottom: 1rpx solid #dbdbdf;
}

.input{
background-color: white;
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0rpx;
  border-top: 2rpx solid #dbdbdf;
   display: flex;
   flex-direction: row;
padding-bottom: 20rpx;
}

.input image{
  height: 80rpx;
  width: 80rpx;
}

.input input{
  font-size: 30rpx;
  width: 90%;
  height: 100%;
  background-color: white;
  z-index: 999;
  padding-left: 20rpx;
  border-bottom: 3rpx solid #4e88f4;
  
}