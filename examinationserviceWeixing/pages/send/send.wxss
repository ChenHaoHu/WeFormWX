/* pages/send/send.wxss */

.top {
  width: 100%;
  height: 130rpx;
  line-height: 150rpx;
  font-size: 40rpx;
  text-align: center;
  color: white;
  background-color: #00a4ff;
}

.top image {
  position: absolute;
  left: 0rpx;
  width: 10%;
  margin-top: 45rpx;
  height: 60rpx;
}

.main {
  width: 100%;
  height: 900rpx;
   display: flex; 
  flex-direction: column;
  padding-top: 60rpx;

}

.input {
  width: 100%;
  display: flex;
  flex-direction: column;
}

textarea {
  width: 80%;
  height: auto;
  min-height:300rpx;
  font-style: italic;
  align-self: center;
  border-radius: 20rpx;
  background-color: #f3f3f3;
  padding: 20rpx;
  margin-bottom: 40rpx;

}

input {
  width: 80%;
  align-self: center;
  border-radius: 20rpx;
  background-color: #f3f3f3;
  padding: 20rpx;
  margin-bottom: 40rpx;
  font-style: italic;
}

 .send button {
  width: 60%;
  align-self: center;
  background-color: #00a4ff;
  margin-top: 10rpx;
}


label{

  margin-left: 70%;
}

.count{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  color: #999;
  font-size: 30rpx;
  font-style: italic;
}